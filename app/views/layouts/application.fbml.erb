<fb:fbml version="1.1">
<%= stylesheet_link_tag "application"%>
<% fb_dashboard do %>
	<%= fb_action "Invite your friends",new_invitation_path%> 
<% end %>
<% fb_tabs do %>
	<%= fb_tab_item "Your Battles", battles_path, :selected => !@battles.nil? %>
	<%= fb_tab_item "Attack!", attacks_path, :selected => @battles.nil? %>
	<%= fb_tab_item "Help &amp; Feedback", fb_about_url, :align=>"right"%>
<% end %>
<%= yield%>
</fb:fbml>